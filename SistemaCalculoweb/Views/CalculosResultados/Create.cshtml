<div>
    @(Html.ActionLink(" ", "Index", new { id = 1 }, new { @class = "glyphicon glyphicon-arrow-left glyphicon-lg" }))
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script type="text/javascript">
    $(function() {
        $("#send").click(function() {
            var idv = $("#idTipoActividadBase").val();
            $.get('@Url.Action("ProcesoCalculo", "CalculosResultados")', { id: idv });
            return false;
        });
    });
</script>
