<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema Calculo", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <div class="container-fluid">
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Mantenedor de Datos
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Mantenedor de Tipo Actividad Base", "index", "TipoActividadBases")</li>
                                <li>@Html.ActionLink("Mantenedor de Tipo Ingraestructura", "index", "TipoInfraestructuras")</li>
                                <li>@Html.ActionLink("Mantenedor de Tipo Operacion", "index", "TipoOperacions")</li>
                                <li>@Html.ActionLink("Mantenedor de Tipo Servicio Brindado", "index", "TipoServicioBrindadoes")</li>
                                <li>@Html.ActionLink("Mantenedor de Tipo Ticket", "index", "TipoTickets")</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Mantenedor de Usuarios
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Registro de Usuario", "Index", "AspNetUsers")</li>
                                <li>@Html.ActionLink("Reset contraseña", "ForgotPassword", "Account")</li>
                                
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Calculo
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Datos de Calculo", "Index", "CalculosResultados")</li>
                                

                            </ul>
                        </li>

                    </ul>
                </div>
                   
                    @Html.Partial("_LoginPartial")
                </div>
           
            </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
